<tal:condition tal:condition="view/available">
  <div class="button-map-content">
    <button i18n:translate="hide-map" class="button-map hide-map">Hide map</button>
    <button i18n:translate="display-map" class="button-map show-map" style="display: none;">Display map</button>
  </div>
  <div id="faceted-map-container" class="pat-leaflet" style="width: 100%; height:40em;" data-pat-leaflet='{
      "fullscreencontrol": true,
      "locatecontrol": true,
      "zoomcontrol": true,
      "minimap": false,
      "geosearch": false
    }'
    data-geojson=''></div>
  <script type="text/javascript">
    jQuery(document).ready(function($) {
      $('.button-map').click(function() {
        $('.button-map').toggle();
        $('#faceted-map-container').toggleClass('hidden');
      });
    });
  </script>
</tal:condition>
